%script(type="text/x-mathjax-config")
  :plain
    MathJax.Hub.Config({
      extensions: ["tex2jax.js"],
      jax: ["input/TeX", "output/HTML-CSS"],
      tex2jax: {
        inlineMath: [ ['$','$'], ["\\(","\\)"] ],
        displayMath: [ ['$$','$$'], ["\\[","\\]"] ],
        processEscapes: true
      },
      "HTML-CSS": { availableFonts: ["TeX"] }
    });
- mathjax = @config[:mathjax]
%script(type="text/javascript" src="#{mathjax[:url]}?config=#{mathjax[:config]}")
